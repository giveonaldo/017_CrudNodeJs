<div class="container">
  <div class="card">
    <!-- <h1 class="title">SignUp</h1> -->
    <img class="logo" src="/images/express-logo.png" alt="logo">
    <form action="/signup" class="form" method="POST">
      <div class="input">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Enter username..."
          required
        />
      </div>
      <div class="input">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Enter password..."
          required
        />
      </div>
      <button type="submit" class="btn">SignUp</button>
    </form>
    <p>Sudah punya akun? <a class="here-link" href="/login">Login di sini</a>.</p>
  </div>
</div>
